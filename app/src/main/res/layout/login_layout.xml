<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3ebe9" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3ebe9"
        android:orientation="vertical"
        android:paddingBottom="22dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="22dp" >

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/shape_border3"
            android:gravity="center_vertical"
            android:hint="输入用户名/手机/邮箱"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="#333"
            android:textColorHint="#a5a5a5"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/shape_border3"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textColor="#333"
            android:textColorHint="#a5a5a5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/shape_red_radius_border"
            android:gravity="center"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/signin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_blue_radius_border"
                android:gravity="center"
                android:text="注册"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/findpwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_gray_radius_border"
                android:gravity="center"
                android:text="找回密码"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="您可以使用以下账号登陆"
            android:textColor="#3f3f3f"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:id="@+id/qq_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <View
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:background="@drawable/icon_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="QQ登陆"
                    android:textColor="#3f3f3f"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="OR"
                android:textColor="#4d3f3f3f"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/weibo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <View
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:background="@drawable/icon_weibo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="微博登录"
                    android:textColor="#3f3f3f"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/shape_gray_radius_border1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="7dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="设置"
                android:textColor="#3f3f3f"
                android:textSize="15sp" />

            <View
                android:layout_width="8.5dp"
                android:layout_height="14dp"
                android:background="@drawable/icon_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/shape_gray_radius_border1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="7dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="消息"
                android:textColor="#3f3f3f"
                android:textSize="15sp" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/notify_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp" >

                <TextView
                    android:id="@+id/notify_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="315"
                    android:textColor="#f87500"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="条通知"
                    android:textColor="#909090"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/nofity_gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="无通知"
                android:textColor="#909090"
                android:textSize="15sp"
                android:visibility="gone" />

            <View
                android:layout_width="8.5dp"
                android:layout_height="14dp"
                android:background="@drawable/icon_arrow" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>