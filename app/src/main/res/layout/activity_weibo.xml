<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@drawable/shape_header1">
        
        <RelativeLayout 
 			android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">
            
            <View 
                android:layout_width="11.5dp"
                android:layout_height="19dp"
                android:background="@drawable/icon_back"/>
            
        </RelativeLayout>
        
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="微博正文"
            android:textColor="#333"
            android:textSize="17sp"
            android:gravity="center"/>
        
        <RelativeLayout 
            android:visibility="invisible"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">
            
            <View 
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/icon_share"/>
            
        </RelativeLayout>
        
    </LinearLayout>
    
    <com.handmark.pulltorefresh.library.PullToRefreshPinnedSectionListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#faf8f7"
        android:divider="@null"
        android:layout_weight="1"></com.handmark.pulltorefresh.library.PullToRefreshPinnedSectionListView>

</LinearLayout>
