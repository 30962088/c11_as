<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp" 
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="36dp"
            android:layout_height="36dp" >

            <com.makeramen.PhotoView
                android:id="@+id/avatar"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />

            <View
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@id/avatar"
                android:layout_alignRight="@id/avatar"
                android:layout_marginBottom="-3dp"
                android:layout_marginRight="-3dp"
                android:background="@drawable/icon_vip" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="戏曲风采"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="今天20:30"
                android:textColor="#b3000000"
                android:textSize="10sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <View
                android:layout_width="12.5dp"
                android:layout_height="10.5dp"
                android:background="@drawable/icon_comment" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textColor="#000"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <GridView
            android:id="@+id/photogrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="5dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="5dp" >
        </GridView>

        <LinearLayout
            android:id="@+id/retweeted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/retweetedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="15sp" />

            <GridView
                android:id="@+id/retweetedPhotogrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="5dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="5dp" >
            </GridView>

            <TextView
                android:id="@+id/retweetedCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#b3000000"
                android:textSize="9sp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>