<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3ebe9" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <com.makeramen.PhotoView
                    android:id="@+id/avatar"
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:background="#fff"
                    android:padding="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher"
                    app:border_color="#eee6e4"
                    app:border_width="1dp"
                    app:round_background="false" >
                </com.makeramen.PhotoView>

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="用户名称"
                    android:textColor="#3c3c3c"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_gray_radius_border1"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/account_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="7dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="账户设置"
                        android:textColor="#3f3f3f"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="8.5dp"
                        android:layout_height="14dp"
                        android:background="@drawable/icon_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e3e3e3" />

                <LinearLayout
                    android:id="@+id/avatar_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="7dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="更换头像"
                        android:textColor="#3f3f3f"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="8.5dp"
                        android:layout_height="14dp"
                        android:background="@drawable/icon_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e3e3e3" />

                <LinearLayout
                    android:id="@+id/city_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="7dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的城市"
                        android:textColor="#3f3f3f"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="北京"
                        android:textColor="#3f3f3f"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="8.5dp"
                        android:layout_height="14dp"
                        android:background="@drawable/icon_arrow" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_gray_radius_border1"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/phone_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="7dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="修改电话"
                        android:textColor="#3f3f3f"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="8.5dp"
                        android:layout_height="14dp"
                        android:background="@drawable/icon_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e3e3e3" />

                <LinearLayout
                    android:id="@+id/pwd_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="7dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="修改密码"
                        android:textColor="#3f3f3f"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="8.5dp"
                        android:layout_height="14dp"
                        android:background="@drawable/icon_arrow" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e3e3e3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weibo_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_gray_radius_border1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="7dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微博绑定"
                    android:textColor="#3f3f3f"
                    android:textSize="15sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/weibo_binding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="已绑定"
                            android:textColor="#3f3f3f"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="12.5dp"
                            android:layout_height="12.5dp"
                            android:background="@drawable/icon_ok" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/weibo_unbinding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="未绑定"
                            android:textColor="#803f3f3f"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="8.5dp"
                            android:layout_height="14dp"
                            android:background="@drawable/icon_arrow" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_gray_radius_border1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="7dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="设置"
                    android:textColor="#3f3f3f"
                    android:textSize="15sp" />

                <View
                    android:layout_width="8.5dp"
                    android:layout_height="14dp"
                    android:background="@drawable/icon_arrow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/info_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/shape_gray_radius_border1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="7dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="消息"
                    android:textColor="#3f3f3f"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/notify_visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/notify_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="315"
                        android:textColor="#f87500"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="条通知"
                        android:textColor="#909090"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/nofity_gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="无通知"
                    android:textColor="#909090"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="8.5dp"
                    android:layout_height="14dp"
                    android:background="@drawable/icon_arrow" />
            </LinearLayout>

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shape_red_radius_border"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="#fff"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/loading"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerInParent="true"/>

</RelativeLayout>